@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>FastFood | Đăng nhập</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.4 -->
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Assets/Admin/LTE/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/Assets/Admin/LTE/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Assets/Admin/LTE/dist/css/adminlte.min.css">
    <style>
        p {
            margin-bottom: 0;
        }
    </style>

</head>
<body class="hold-transition login-page" style="background-image: url(/Assets/Admin/Images/background.png); background-repeat:repeat-x repeat-y">
    <div class="login-box">
        <div class="login-logo">
            <img src="/Assets/Admin/Images/big logo.png" style="margin-left:auto; margin-right:auto; display:block; width:220px;" />

        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Đăng ký</p>
                @Html.ValidationMessage("result")
                @using (Ajax.BeginForm("CreateAccount", "Login", new AjaxOptions { HttpMethod = "POST", OnComplete = "fnAddSuccess", OnFailure = "fnAddFail" },
new { @enctype = "multipart/form-data" }))
                {
                    <p>Tên đăng nhập</p>
                    <div class="input-group mb-3">

                        <input name="inputUserName" type="text" class="form-control" placeholder="Tên đăng nhập">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <i class="fas fa-user"></i>
                            </div>
                        </div>
                    </div>
                    <p>Mật khẩu</p>
                    <div class="input-group mb-3">
                        <input name="userPassword" type="password" class="form-control" placeholder="Mật khẩu">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <i class="fas fa-key"></i>
                            </div>
                        </div>
                    </div>
                    <p>Tên đầy đủ</p>
                    <div class="input-group mb-3">
                        <input name="name" type="password" class="form-control" placeholder="Tên đầy đủ">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <i class="fas fa-font"></i>
                            </div>
                        </div>
                    </div>
                    <p>Email</p>
                    <div class="input-group mb-3">
                        <input name="email" type="password" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">

                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
                        </div>
                        <!-- /.col -->
                    </div>
                }

                <p class="mb-1">
                    @Html.ActionLink("Đăng nhập", "index")
                </p>
                <p class="mb-0">

                </p>

            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery 2.1.4 -->
    <script src="/Assets/Admin/LTE/plugins/jQuery/jQuery-2.1.4.min.js" type="text/javascript"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="/Assets/Admin/LTE/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- iCheck -->
    <script src="/Assets/Admin/LTE/plugins/iCheck/icheck.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>



