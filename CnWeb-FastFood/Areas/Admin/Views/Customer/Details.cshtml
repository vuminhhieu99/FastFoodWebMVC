@model CnWeb_FastFood.Models.EF.Customer

@{
    ViewBag.Title = "Details";
   Layout = "/Areas/Admin/Views/Shared/_AdminlteLayout.cshtml";
}


<div>
    <table style="width:60%">
        <col style="width:40%">
        <col style="width:20%">
        <tr>
            <td>
                <dl class="dl-horizontal">
                    <dt>
                        Mã khách hàng:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.id_customer)
                    </dd>

                    <dt>
                        Tên khách hàng:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>

                    <dt>
                        Số điện thoại
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.phone)
                    </dd>

                    <dt>
                        Địa chỉ:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.address)
                    </dd>

                    <dt>
                        UserName:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.userName)
                    </dd>

                    <dt>
                        SubTotalCart:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.subtotalCart)
                    </dd>

                    <dt>
                        TotalCart:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.totalCart)
                    </dd>

                    <dt>
                        Mã giảm giá:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.id_discountCode)
                    </dd>

                </dl>
            </td>
            <td>
                <div class="form-group">
                    <div class="col-md-10">
                        <label>Avatar</label><br />
                        <img height="150" src="/Areas/Admin/Content/Photos/@Model.avatar" alt="Chưa có" />
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>



