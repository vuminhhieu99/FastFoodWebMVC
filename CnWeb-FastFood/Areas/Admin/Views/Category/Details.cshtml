@{
    ViewBag.Title = "Details";
    Layout = "/Areas/Admin/Views/Shared/_AdminlteLayout.cshtml";
}

@section Styles
{

}

<div>
    <dl class="dl-horizontal">
        <dt>
            Mã thể loại: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_category)
        </dd>

        <dt>
            Tên thể loại:
