@model CnWeb_FastFood.Models.EF.BillView

@{
    ViewBag.Title = "Filter";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Sản phẩm - Bộ lọc đơn hàng
}


@using (Html.BeginForm("Index2", "Bill", FormMethod.Get, new { id = "form1" }))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table style="width:50%">
            <col style="width:25%">
            <col style="width:25%">
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Mã đơn hàng</label>
                            <input type="number" min="0" class="form-control" name="idBill" placeholder="Nhập mã đơn hàng ..." style="width:332px">
                        </div>
                    </div>
                    <br />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Tên khách hàng</label>
                            <input type="text" class="form-control" name="customerName" placeholder="Nhập tên khách hàng ..." ) style="width:332px">
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Số điện thoại</label>
                            <input type="text" class="form-control" name="phone" placeholder="Nhập số điện thoại ..." ) style="width:332px">
                        </div>
                    </div>
                    <br />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Địa chỉ</label>
                            <input type="text" class="form-control" name="address" placeholder="Nhập địa chỉ ..." ) style="width:332px">
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Mã giảm giá</label>
                            <input type="text" class="form-control" name="discountCode" placeholder="Nhập mã giảm giá ..." ) style="width:332px">
                        </div>
                    </div>
                    <br />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Trạng thái đơn hàng</label><br />
                            @Html.DropDownList("status", (IEnumerable<SelectListItem>)ViewBag.BillStatusList, "  --  Trạng thái đơn hàng  --  ", new { @class = "combobox", @style = "height:32px; width:332px" })
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Số tiền giảm giá từ (đ)</label>
                            <input type="number" step="1000" min="0" class="form-control" name="discountFrom" placeholder="Giảm giá từ ...">
                        </div>
                    </div>
                    <br />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">đến (đ)</label>
                            <input type="number" step="1000" min="0" class="form-control" name="discountFrom" placeholder="đến ...">
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Subtotal từ (đ)</label>
                            <input type="number" step="1000" min="0" class="form-control" name="subtotalFrom" placeholder="Subtotal từ ...">
                        </div>
                    </div>
                    <br />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">đến (đ)</label>
                            <input type="number" step="1000" min="0" class="form-control" name="subtotalTo" placeholder="đến ...">
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Tổng tiền từ (đ)</label>
                            <input type="number" step="1000" min="0" class="form-control" name="totalFrom" placeholder="Tổng tiền từ ...">
                        </div>
                    </div>
                    <br />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">đến (đ)</label>
                            <input type="number" step="1000" min="0" class="form-control" name="totalTo" placeholder="đến ...">
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
        </table>
        <br />

        <button type="submit" class="btn btn-primary" style="width:110px;">
            <i class="fa fa-filter"></i> &nbsp;Lọc
        </button>
        <button type="button" class="btn btn-warning">
            <i class="fa fa-th-list"></i> &nbsp;
            @Html.ActionLink("Danh sách", "Index")
        </button>
    </div>
}