@model CnWeb_FastFood.Models.EF.DiscountCode

@{
    ViewBag.Title = "Edit";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Mã giảm giá - Chỉnh sửa thông tin (#@Model.id_discountCode)
}

@using (Html.BeginForm("Edit", "DiscountCode", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_discountCode)


        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Số tiền giảm giá</label>
                <input type="number" min="0" step="1000" class="form-control" name="discount" placeholder="Nhập số tiền giảm giá ..." value=" @Html.DisplayFor(model => model.discount)">
            </div>
        </div>

        <br />

        <button type="submit" class="btn btn-primary btn-admin" style="width:110px">
            <a class="fa fa-save"></a> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning btn-admin" style="width:110px">
            <a class="fa fa-th-list"></a> &nbsp;
            @Html.ActionLink("Danh sách", "Index")
        </button>
    </div>
}
