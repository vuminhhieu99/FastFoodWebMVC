<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Thể loại sản phẩm</span>
                    </div>
                    <ul>
                        @Html.Action("CategoryShow")
                        <li style="color:white">none</li>
                        <li style="color:white">none</li>
                        <li style="color:white">none</li>
                        <li style="color:white">none</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="/Home/Index" method="get">
                            <input type="text" id="txtKeyword" name="keyword" placeholder="Nhập thông tin tìm kiếm... " value="@ViewBag.Keyword">
                            <button type="submit" class="site-btn">Tìm kiếm</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+84 65.888.888</h5>
                            <span>Hỗ trợ 24/7</span>
                        </div>
                    </div>
                </div>
                <div class="hero__item set-bg" style="background-image: url();" data-setbg="/Assets/Client/img/hero/banner.png">
                    <div></div>
                    <div class="hero__text">
                        <img src="/Assets/Client/img/big logo.png" alt="" width="170px" style="margin: auto;">
                        <p style="text-align: center; margin-top: 10px; margin-bottom: -8px;">Giao hàng phục vụ tận nơi</p>
                        <p style="text-align: center;">An toàn - Tiện lợi</p>
                        <a href="/Shop/Index" class="primary-btn" style="margin: auto;">Mua ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->