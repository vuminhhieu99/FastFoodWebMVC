@model CnWeb_FastFood.Models.EF.DiscountCode

@{
    ViewBag.Title = "Create";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Mã giảm giá - Thêm mã giảm giá
}


@using (Html.BeginForm("Create", "DiscountCode", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Mã giảm giá</label>
                <input type="text" class="form-control" name="id" placeholder="Nhập mã giảm giá ..." value=" @Html.DisplayFor(model => model.id_discountCode)">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Số tiền giảm giá (đ)</label>
                <input type="number" min="0" step="1000" class="form-control" name="discount" placeholder="Nhập số tiền giảm giả ..." value=" @Html.DisplayFor(model => model.discount)">
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="width:110px">
            <a class="fa fa-save"></a> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning" style="width:110px">
            <a class="fa fa-th-list"></a> &nbsp;
            @Html.ActionLink("Danh sách", "Index")
        </button>
    </div>
}