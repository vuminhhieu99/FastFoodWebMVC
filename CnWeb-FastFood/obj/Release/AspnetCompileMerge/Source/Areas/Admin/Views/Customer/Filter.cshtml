@model CnWeb_FastFood.Models.EF.Customer

@{
    ViewBag.Title = "Filter";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Khách hàng - Bộ lọc khách hàng
}


@using (Html.BeginForm("Index2", "Customer", FormMethod.Get, new { id = "form1" }))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table style="width:50%">
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Mã khách hàng</label>
                            <input type="number" class="form-control" name="idCustomer" placeholder="Nhập mã khách hàng ...">
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Tên khách hàng</label>
                            <input type="text" class="form-control" name="name" placeholder="Nhập tên khách hàng ...">
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Số điện thoại</label><br />
                            <input type="text" class="form-control" name="phone" placeholder="Nhập số điện thoại ...">
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Địa chỉ</label><br />
                            <input type="text" class="form-control" name="address" placeholder="Nhập địa chỉ ...">
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">UserName</label><br />
                            <input type="text" class="form-control" name="username" placeholder="Nhập username ...">
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
        </table>
        <br />

        <button type="submit" class="btn btn-primary" style="width:110px;">
            <i class="fa fa-filter"></i> &nbsp;Lọc
        </button>
        <button type="button" class="btn btn-warning">
            <i class="fa fa-th-list"></i> &nbsp;
            @Html.ActionLink("Danh sách", "Index")
        </button>
    </div>
}