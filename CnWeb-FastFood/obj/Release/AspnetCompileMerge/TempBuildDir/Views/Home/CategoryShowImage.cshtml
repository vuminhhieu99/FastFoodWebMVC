@model IEnumerable<CnWeb_FastFood.Models.EF.Category>

<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Thể loại sản phẩm FastFood</b></h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="/Areas/Admin/Content/Photos/@item.photo">
                            <h5><a>@item.name</a></h5>
                        </div>
                    </div>
                }

            </div>
        </div>

    </div>
</div>
